        </TextBlock>
        <TextBox Name="txtQuantiteAchat" HorizontalAlignment="Left" Margin="478,667,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="293" Height="38" FontSize="16"/>
